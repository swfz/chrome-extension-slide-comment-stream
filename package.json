{
  "name": "slide-comment-stream",
  "displayName": "Slide Comment Stream",
  "version": "0.0.1",
  "description": "presentation comment stream in slide",
  "author": "swfz",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "format": "biome format --write ./src",
    "format-check": "biome format ./src",
    "lint": "biome check ./src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.13.0",
    "css-filter-converter": "^1.0.109",
    "lucide-react": "^0.469.0",
    "plasmo": "0.89.4",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.294",
    "@types/node": "20.11.5",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.15.5",
  "manifest": {
    "web_accessible_resources": [
      {
        "resources": [
          "assets/sign_language_black_24dp.svg"
        ],
        "matches": [
          "<all_urls>"
        ]
      },
      {
        "resources": [
          "contents/content.css"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "host_permissions": [
      "https://*/*"
    ]
  }
}
